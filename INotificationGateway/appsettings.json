{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "routetest": {
        "ClusterId": "user1",
        "Match": {
          "Path": "u/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/u" }
        ]
      }
    },

    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "https://cn.bing.com/"
          }
        }
      },
      "user1": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7246"
          }
        }
      }
    }
  }
}
